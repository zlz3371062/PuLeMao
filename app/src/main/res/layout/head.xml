<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorheadback">
    <LinearLayout
        android:id="@+id/headtitleleftll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/headtitleleftimg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/headtitlelefttxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="返回"
                android:gravity="center|left"
                android:textColor="@color/colorwhite"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/headapptitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="普乐猫"
            android:gravity="center"
            android:textColor="@color/colorwhite"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/headtitleright"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/headtitleimg1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <ImageView
            android:id="@+id/headtitleimg2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
