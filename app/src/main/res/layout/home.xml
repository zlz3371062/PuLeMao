<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

   <LinearLayout
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="0dp">
       <android.support.v4.view.ViewPager
           android:id="@+id/homevp"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

       </android.support.v4.view.ViewPager>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/homebtnhome1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/home1img1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:orientation="vertical"
                android:src="@drawable/tab11">

            </ImageView>
            <TextView
                android:gravity="center"
                android:text="首页"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                />
            

        </LinearLayout>
        <LinearLayout
            android:id="@+id/homebtnhome2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/home1img2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:orientation="vertical"
                android:src="@drawable/tab2">

            </ImageView>
            <TextView
                android:gravity="center"
                android:text="育学堂"
                android:layout_width="match_parent"
                android:layout_height="20dp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/homebtnhome3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/home1img3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:orientation="vertical"
                android:src="@drawable/tab30">

            </ImageView>
            <TextView
                android:gravity="center"
                android:text="购物车"
                android:layout_width="match_parent"
                android:layout_height="20dp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/homebtnhome4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/home1img4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:orientation="vertical"
                android:src="@drawable/tab40">

            </ImageView>
            <TextView
                android:gravity="center"
                android:text="我的"
                android:layout_width="match_parent"
                android:layout_height="20dp" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
